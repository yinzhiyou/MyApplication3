<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopCarActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/top_t"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="购物车"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
           />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/top_t"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/shop_car"/>

    <TextView
        android:id="@+id/text_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:text="123232" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView

        android:layout_below="@id/shop_car"
        android:id="@+id/car_xrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tteee"
        tools:ignore="NotSibling"></com.jcodecraeer.xrecyclerview.XRecyclerView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tteee"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选/全不选"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算："/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算"/>
    </LinearLayout>
</RelativeLayout>